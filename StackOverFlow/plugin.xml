<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            id="StackOverFlow.commands.QuickSearchCategory"
            name="QuickSearch Category">
      </category>
      <command
            categoryId="StackOverFlow.commands.QuickSearchCategory"
            name="QuickSearch Command"
            id="StackOverFlow.commands.QuickSearchCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="stackoverflow.handlers.QuickSearchHandler"
            commandId="StackOverFlow.commands.QuickSearchCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="StackOverFlow.commands.QuickSearchCommand"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="StackOverFlow.menus.StackOverFlowMenu"
               label="StackOverFlow"
               mnemonic="M">
            <command
                  commandId="StackOverFlow.commands.QuickSearchCommand"
                  id="StackOverFlow.menus.QuickSearchCommand"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="StackOverFlow.toolbars.QuickSearchToolbar">
            <command
                  id="StackOverFlow.toolbars.QuickSearchCommand"
                  commandId="StackOverFlow.commands.QuickSearchCommand"
                  icon="icons/sample.png"
                  tooltip="Say hello world">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
